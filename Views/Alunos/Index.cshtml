@model IEnumerable<EscolaProjeto.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h2>Existem @ViewBag.Quantidade de alunos cadastrados.</h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">Cadastrar novo Aluno</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="SeachString">Procure aqui: </label>
        <input type="text" class="form-control" name="SeachString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                Nome do Aluno
            </th>
            <th>
                CPF
            </th>
            <th>
                Nome da Escola
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turma)
            </th>
            <th>
                Materias
            </th>
            <th>
                Data de Nascimento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turma.Escola.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turma.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Turma.Materia.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeNascimento)
                </td>
            <td>
                <td>
                    <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" class="btn btn-outline-info" asp-route-id="@item.Id">Deletar</a>
                </td>
            </td>
        </tr>
}
    </tbody>
</table>
