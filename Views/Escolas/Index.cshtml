@model IEnumerable<EscolaProjeto.Models.Escola>

@{
    ViewData["Title"] = "Index";
}

<h2>Existem @ViewBag.Quantidade de Escolas cadastrados.</h2>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="SeachString">Procure aqui: </label>
        <input type="text" class="form-control" name="SeachString" value="@ViewData["CurrentFilter"]"/>
        <input type="submit" value="Search" class="btn btn-primary"/>
    </div>
</form>
<p>/
    <a asp-action="Create" class="btn btn-primary btn-lg">Cadastrar Nova Escola</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereço)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereço)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id" id="details">Detalhes</a> |
                    <a asp-action="Delete" class="btn btn-outline-info" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
